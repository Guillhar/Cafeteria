<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECCAFA"
    tools:context=".CoffeeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal"
            android:text="donuts"
            android:textColor="#020202"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/idImgCoffee"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/donuts" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:justificationMode="inter_word"
                android:text="O café é uma bebida produzida a partir dos grãos torrados do fruto do cafeeiro. É servido tradicionalmente quente, mas também pode ser consumido gelado."
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160sp"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="70sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/ic_baseline_star" />


                <TextView
                    android:layout_width="54sp"
                    android:layout_height="70sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="90sp"
                    android:text="9,8"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="70sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_baseline_favorite" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_baseline_share" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>
